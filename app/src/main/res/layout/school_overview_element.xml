<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/school_overview_list_element"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/activity_vertical_margin"
              android:orientation="vertical">

    <TextView
        android:id="@+id/overview_school_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/textSubHeadingSize"
        tools:text="trial"
        android:textStyle="bold"/>

    <LinearLayout
        android:paddingTop="@dimen/recycler_element_top_padding"
        android:layout_width="match_parent"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/overview_school_annaporna_code"
            android:text="SAI CODE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:textSize="@dimen/textBodySize"/>

        <TextView
            android:id="@+id/overview_school_strength"
            tools:text="sai"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/textBodySize"/>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/colorDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>